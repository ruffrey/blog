<h1>Blog Archive</h1>
<br />
	<%
		for( var b=0; b< blogs.length; b++ )
		{
	%>	
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<h3><%=blogs[b].pubdate%></h3>
				</div>
				
				<div class="span6">
					<h4 class="pull-right">by <%=blogs[b].author%></h4>
				</div>
				
			</div>
			 
			<h2>
				<a href="/blogs/<%=blogs[b].blogClassname.replace(/\_/g,'-')%>">
					<%=blogs[b].blogtitle%>
				</a>
			</h2>
			
			<div class="row-fluid">
				<div class="span12">
					<%-partial('blogs/'+blogs[b].blogClassname)%>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
				<h4>Tags</h4>
				<%
					if( blogs[b].tags && blogs[b].tags.length>0 )
					{
				%><h5>
				<%
						for( var t=0; t<blogs[b].tags.length; t++ )
						{
				%>		<a href="/search/<%=encodeURIComponent(blogs[b].tags[t])%>">
							<%=blogs[b].tags[t]%></a>&nbsp;
				<%			
						}
				%></h5>
				<%
					}
					else{
				%>	<p>None</p>
				<%
					}
				%>
				</div>
			</div>
		</div>
		
	<%	
		}		
	%>

