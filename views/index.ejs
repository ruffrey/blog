<h1>The Blog of Wiggleware</h1>
<br />
	
	<%
		for( var b=0; b< recent.length; b++ )
		{
	%>	
		<div class="hero-unit">
			<h1>
				<a href="/blogs/<%=recent[b].blogClassname.replace(/\_/g,"-")%>">
					<%=recent[b].blogtitle%>
				</a>
			</h1>
			<div class="row-fluid">
				<div class="span6">
					<h6><%=recent[b].pubdate%></h6>
				</div>
				
				<div class="span6">
					<h6 class="pull-right">by <%=recent[b].author%></h6>
				</div>
				
			</div>
			 
			<div class="row-fluid">
				<div class="span12">
					<%-partial("blogs/"+recent[b].blogClassname)%>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
				<h4>Tags</h4>
				<%
					if( recent[b].tags && recent[b].tags.length>0 )
					{
				%><h5>
				<%
						for( var t=0; t<recent[b].tags.length; t++ )
						{
				%>		<a href="/search/<%=encodeURIComponent(recent[b].tags[t])%>">
							<%=recent[b].tags[t]%></a>&nbsp;
				<%			
						}
				%></h5>
				<%
					}
					else{
				%>	<p>None</p>
				<%
					}
				%>
				</div>
			</div>
		</div>
		
	<%	
		}		
	%>

